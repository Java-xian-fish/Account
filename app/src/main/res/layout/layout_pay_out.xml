<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#70cafa">
        <AutoCompleteTextView
            android:id="@+id/text1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:hint="请输入账单类型："/>
        <AutoCompleteTextView
            android:id="@+id/text2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/text1"
            android:hint="请输入账单条目："/>
        <AutoCompleteTextView
            android:id="@+id/text3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/text2"
            android:hint="请输入商品名称："/>
        <AutoCompleteTextView
            android:id="@+id/text4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/text3"
            android:hint="请输入商家或者收款人："/>
        <AutoCompleteTextView
            android:id="@+id/text5"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/text4"
            android:hint="请输入购买地点："/>
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/aaasdf"
            android:layout_width="match_parent"
            android:layout_below="@+id/text5"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/text6"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="请输入金额："/>
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/pay_way"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:entries="@array/pay_way"
                />
        </android.support.v7.widget.LinearLayoutCompat>
        <AutoCompleteTextView
            android:id="@+id/text7"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/aaasdf"
            android:hint="请输入购买备注（可以用于检索）："/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/text7"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/button1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/cancel"/>
            <Button
                android:id="@+id/button2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/ok"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/aaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="如果您想设置现在的时间，请直接点击确认！"/>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/aaa"
            android:orientation="vertical">
            <DatePicker
                android:id="@+id/date"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"/>
            <TimePicker
                android:id="@+id/time"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:timePickerMode="spinner"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/button3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/cancel"/>
            <Button
                android:id="@+id/button4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/ok"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>
